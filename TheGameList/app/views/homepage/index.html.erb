
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Current Nintendo Switch Titles</h1>

<% @games.each do |game| %>
  <div class="entry">
    <%= image_tag(game.box_art_url) %>
    <h3><%= game.title %></h3>
    <%= sanitize game.description %>
    <div class="year_line">
      <span class="Year"><%= game.year %></span> 
			<span class="Developer"><%= game.developer %></span>
      <%= button_to 'Add to Wishlist', line_items_path(game_id: game)%>
    </div>
  </div>
<% end %>
